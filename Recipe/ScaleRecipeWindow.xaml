<Window x:Class="RecipeAppWPF.ScaleRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scale Recipe" Height="200" Width="400"
		WindowState="Maximized">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
		
        <TextBlock Text="Enter Scaling Factor:" Margin="0,0,0,10"/>
        <TextBox x:Name="ScalingFactorInput" Margin="0,0,0,10"/>
        <Button Grid.Row="2" Content="Scale" Click="Scale_Click" HorizontalAlignment="Right"/>
    </Grid>
</Window>
